<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- SHAPE-APPEARANCE BTN -->
    <style name="ShapeAppearance.Tokio.Rounded" parent="ShapeAppearance.MaterialComponents.MediumComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">10dp</item>
    </style>

    <style name="ShapeAppearance.Tokio.Rounded2" parent="ShapeAppearance.MaterialComponents.MediumComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">10dp</item>
    </style>

    <!-- SHAPE-APPEARANCE INPUT LAYOUT -->
    <style name="ShapeAppearance.Tokio.InputLayout" parent="ShapeAppearance.MaterialComponents.LargeComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">10dp</item>
    </style>

    <!-- BOTONES -->
    <style name="Button.Filled.Normal">
        <item name="android:layout_width">200dp</item>
        <item name="android:layout_height">60dp</item>
        <item name="android:gravity">center</item>
        <item name="android:textAppearance">@style/TextAppearance.Practica4.Button</item>
    </style>

    <style name="Button.Filled2.Normal">
        <item name="android:layout_width">40dp</item>
        <item name="android:layout_height">30dp</item>
        <item name="android:gravity">center</item>
        <item name="android:textAppearance">@style/TextAppearance.Practica4.Button</item>
    </style>
    <!-- INPUTS LAYOUTS -->
    <style name="InputLayout.Filled.Normal">
        <item name="android:layout_marginStart">30dp</item>
        <item name="android:layout_marginEnd">30dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textAppearance">@style/TextAppearance.Practica4.Body1</item>
    </style>

    <style name="InputLayout.Filled2.Normal">
        <item name="android:layout_marginStart">30dp</item>
        <item name="android:layout_marginEnd">30dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textAppearance">@style/TextAppearance.Practica4.Body1</item>

    </style>
</resources>